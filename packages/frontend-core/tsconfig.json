{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@lawprotect/shared-ts": ["../shared-ts/src/index.ts"],
      "@lawprotect/shared-ts/*": ["../shared-ts/src/*"]
    }
  },
  "include": ["src"]
}

