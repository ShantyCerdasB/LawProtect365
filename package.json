{
  "name": "lawprotect365",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for LawProtect 365 (services, packages, web, mobile).",
  "type": "commonjs",
  "workspaces": [
    "services/*",
    "packages/*",
    "web-frontend",
    "mobile-android",
    "mobile-ios"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint --parallel",
    "typecheck": "turbo run typecheck --parallel",
    "test": "turbo run test --parallel",
    "format": "turbo run format --parallel",
    "prisma:generate": "turbo run prisma:generate --parallel",
    "clean": "turbo run clean --parallel && rimraf node_modules"
  },
  "devDependencies": {
  "turbo": "^1.10.0",
  "rimraf": "^5.0.5",
  "jest": "^29.7.0",
  "ts-jest": "^29.2.5",
  "@types/jest": "^29.5.12"
}

}
