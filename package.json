{
  "name": "lawprotect365",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for LawProtect 365 (services, packages, web, mobile).",
  "type": "commonjs",
  "workspaces": [
    "services/*",
    "packages/*",
    "web-frontend",
    "mobile-android",
    "mobile-ios"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint --parallel",
    "typecheck": "turbo run typecheck --parallel",
    "test": "turbo run test --parallel",
    "format": "turbo run format --parallel",
    "prisma:generate": "turbo run prisma:generate --parallel",
    "clean": "turbo run clean --parallel && rimraf node_modules",
    "analyze:unused": "node scripts/find-unused-files.js",
    "analyze:ts": "node scripts/analyze-ts-usage.js",
    "analyze:deps": "depcheck"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@vitest/coverage-v8": "^1.6.1",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.2.5",
    "turbo": "^1.10.0",
    "vitest": "^1.6.1"
  }
}
