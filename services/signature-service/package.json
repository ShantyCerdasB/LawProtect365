{
  "name": "@lawprotect/signature-service",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx watch serverless.local.ts",
    "dev:local": "npm run dynamodb:start && npm run dev",
    "pretest": "npm run localstack:start && npm run localstack:setup && npm run dynamodb:start && npm run dynamodb:create-tables",
    "test": "jest --config ./jest.config.cjs",
    "posttest": "npm run dynamodb:stop",
    "test:local": "npm run dynamodb:start && npm test && npm run dynamodb:stop",
    "test:watch": "jest --watch --config ./jest.config.cjs",
    "coverage": "jest --coverage --config ./jest.config.cjs",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "dynamodb:start": "tsx scripts/startDynamoDB.ts",
    "dynamodb:stop": "taskkill /F /IM java.exe /FI \"WINDOWTITLE eq DynamoDB Local*\" 2>nul || pkill -f dynamodb-local || true",
    "dynamodb:create-tables": "tsx scripts/createLocalTables.ts",
    "localstack:start": "tsx scripts/startLocalStack.ts",
    "localstack:setup": "tsx scripts/setupLocalStack.ts",
    "localstack:reset": "docker rm -f lawprotect365-localstack 2>nul || true && npm run localstack:start && npm run localstack:setup"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.883.0",
    "@aws-sdk/client-cloudwatch": "^3.883.0",
    "@aws-sdk/client-dynamodb": "^3.868.0",
    "@aws-sdk/client-eventbridge": "^3.864.0",
    "@aws-sdk/client-kms": "^3.864.0",
    "@aws-sdk/client-s3": "^3.864.0",
    "@aws-sdk/client-ssm": "^3.864.0",
    "@aws-sdk/lib-dynamodb": "^3.868.0",
    "@aws-sdk/s3-request-presigner": "^3.864.0",
    "@lawprotect/shared-ts": "^0.1.0",
    "@types/jsonwebtoken": "^9.0.10",
    "dotenv": "^16.4.5",
    "jsonwebtoken": "^9.0.2",
    "pdf-lib": "^1.17.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.12",
    "dynamodb-local": "^0.0.35",
    "express": "^5.1.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.5.4"
  }
}
