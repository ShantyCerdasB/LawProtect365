{
  "_comment": "TypeScript configuration for Jest testing environment in signature-service",
  "_description": "Extends the main tsconfig.json with Jest-specific settings for test compilation and module resolution",
  
  // Inherits from the main application TypeScript configuration
  "extends": "./tsconfig.json",
  
  "compilerOptions": {
    // Base URL for resolving non-relative module names
    "baseUrl": ".",

    // Module system configuration for Jest compatibility
    // Uses ESNext with Bundler resolution for optimal Jest integration
    "module": "ESNext",
    "moduleResolution": "Bundler",

    // Type definitions for Jest and Node.js testing environment
    "types": ["jest", "node"],

    // Path mapping for service-specific aliases
    // Maps @/* imports to src/* directory for clean import paths
    "paths": {
      "@/*": ["src/*"]
    },

    // Relaxed type checking for test files to avoid noisy warnings
    // from shared packages and test-specific code patterns
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },

  // Include source code and test files for TypeScript compilation
  "include": ["src", "__tests__"],
  
  // Exclude disabled tests and specific helper files that don't need compilation
  "exclude": [
    "__tests__/integration/disabled", 
    "__tests__/integration/helpers/cognitoTokenHelper.ts"
  ]
}