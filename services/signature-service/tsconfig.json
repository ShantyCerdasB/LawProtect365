{
  "_comment": "TypeScript configuration for signature-service production build",
  "_description": "Main TypeScript configuration for building the signature service with ESM support and strict type checking",
  
  "compilerOptions": {
    // Target ECMAScript version for compilation output
    "target": "ES2022",
    
    // Module system configuration for Node.js ESM compatibility
    // Uses ESNext with bundler resolution for optimal build performance
    "module": "ESNext",
    "moduleResolution": "bundler",

    // Output and source directory configuration
    "outDir": "dist",
    "rootDir": ".",

    // Path mapping configuration for clean imports
    // Minimal local aliases for development (extensive mappings in tsconfig.jest.json)
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    // Strict type checking configuration for production code quality
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    // ESM/CommonJS interoperability settings
    "esModuleInterop": true,
    "skipLibCheck": true,

    // Type definitions for the application
    // Base Node.js types; Jest types included for test files
    "types": ["node", "jest"]
  },
  
  // Source files to include in TypeScript compilation
  "include": ["src", "serverless.local.ts", "__tests__/**/*"]
}